@model WhatIsElasticSearch.MvcWebUI.Models.CategoryListViewModel

<div class="list-group">
    @foreach (var category in Model.Categories)
    {
        string cssClassName = category.Id == Model.CurrentCategory ? "list-group-item active" : "list-group-item";

        <a href="/product/index?category=@category.Id" class="@cssClassName">@category.CategoryName</a>
    }
</div>