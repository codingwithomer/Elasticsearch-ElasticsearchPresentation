@model WhatIsElasticSearch.MvcWebUI.Models.CartSummaryViewModel

<ul class="dropdown-menu">
    @foreach (var cartItem in Model.Cart.CartLines)
    {
        <li>
            <a>@cartItem.Product.ProductName <span class="badge">@cartItem.Quantity</span></a>
        </li>
    }

    <li role="separator" class="divider"></li>
    <li>
        <a><span class="glyphicon glyphicon-align-left glyphicon-shopping-cart" aria-hidden="true"></span>@Model.Cart.Total.ToString("#.##")</a>
    </li>
    <li role="separator" class="divider"></li>
    <li>
        <a asp-controller="Cart" asp-action="List">Go to cart details</a>
    </li>
</ul>